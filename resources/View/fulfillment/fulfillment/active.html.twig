{% extends '::fulfillment' %}
{% block process %}
	<h2>{{ heading }}</h2>
	{% if orders | length > 0 %}
		<table class="order-listing">
			<thead>
			<tr>
				<th><span>Order Id</span></th>
				<th><span>Date/Time</span></th>
				<th><span>Name</span></th>
				<th><span>Shipping method</span></th>
				<th><span>Value</span></th>
				<th class="printed"><span>Printed</span></th>
				<th class="picked"><span>Picked</span></th>
				<th class="packed"><span>Packed</span></th>
				<th class="postaged"><span>Postaged</span></th>
				<th class="pickedup"><span>Picked&nbsp;up</span></th>
			</tr>
			</thead>
			<tbody>
				{% for key, order in orders %}
					<tr>
						<td><a href="{{ url('ms.commerce.order.detail.view', {'orderID': order.id}) }}">{{ order.id }}</a></td>
						<td>{{ order.authorship.createdAt.date }}</td>
						<td><a href="#">{{ order.user.name }}</a></td>
						<td>{{ order.shippingName }}</td>
						<td>{{ order.totalNet }}</td>
						<td>{{ history[order.id]["printed"]["users"] }}</td>
						<td>{{ history[order.id]["picked"]["users"] }}</td>
						<td>{{ history[order.id]["packed"]["users"] }}</td>
						<td>{{ history[order.id]["postaged"]["users"] }}</td>
						<td>{{ history[order.id]["dispatched"]["users"] }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>{{ 'ms.ecom.fulfillment.none'|trans }}</p>
	{% endif %}
{% endblock %}